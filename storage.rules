rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is useful for profile pictures, etc.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write their own profile picture.
    // The path must match exactly 'profile-pictures/{userId}'.
    // The uploaded file size should be limited (e.g., less than 5MB).
    match /profile-pictures/{userId} {
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
