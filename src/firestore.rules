rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/userProfiles/$(request.auth.uid));
      return request.auth != null
        && exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid))
        && 'isAdmin' in userDoc.data
        && userDoc.data.isAdmin == true;
    }

    // User Profiles
    match /userProfiles/{userId} {
      allow create: if isAuth() && isOwner(userId);
      allow get: if isAuth();
      allow list: if isAuth() && isAdmin();
      allow update: if isAuth() && (isOwner(userId) || isAdmin());
      allow delete: if false;
    }

    // Session Requests
    match /sessionRequests/{requestId} {
      allow create: if isAuth() && request.resource.data.studentId == request.auth.uid;
      allow get: if isAuth();
      allow list: if isAuth(); // Anyone can see open requests, client-side filters by user for "my-sessions"
      allow update: if isAuth() && (
        isOwner(resource.data.studentId) ||
        (resource.data.tutorId != null && isOwner(resource.data.tutorId)) ||
        isAdmin()
      );
      allow delete: if false;
    }

    // Transactions
    match /transactions/{transactionId} {
      allow create: if isAuth() && (isOwner(request.resource.data.userId) || isAdmin());
      // A user can only list their own transactions. Admins can list all.
      // The client query MUST include `where('userId', '==', request.auth.uid)`.
      allow list: if isAuth() && (request.query.where.userId == request.auth.uid || isAdmin());
      allow get: if isAuth() && (isOwner(resource.data.userId) || isAdmin());
      allow update, delete: if false;
    }

    // Notifications
    match /notifications/{notificationId} {
       allow create: if isAuth();
       // A user can only list their own notifications. Admins can list all.
       allow list: if isAuth() && (request.query.where.userId == request.auth.uid || isAdmin());
       allow get, update, delete: if isAuth() && (isOwner(resource.data.userId) || isAdmin());
    }

    // Withdrawal Requests
    match /withdrawalRequests/{withdrawalId} {
      allow create: if isAuth() && isOwner(request.resource.data.userId);
       // A user can only list their own requests. Admins can list all.
      allow list: if isAuth() && (request.query.where.userId == request.auth.uid || isAdmin());
      allow get: if isAuth() && (isOwner(resource.data.userId) || isAdmin());
      allow update: if isAuth() && isAdmin();
      allow delete: if false;
    }

    // Discount Codes
    match /discountCodes/{discountId} {
      allow create, update, delete: if isAuth() && isAdmin();
      allow get, list: if isAuth();
    }

    // Contact Messages
    match /contactMessages/{messageId} {
      allow create: if true; // Anyone can send a message
      allow list, get, update: if isAuth() && isAdmin();
      allow delete: if isAuth() && isAdmin();
    }
  }
}
