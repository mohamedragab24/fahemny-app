rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Collection Rules ---

    match /userProfiles/{userId} {
      // Allow any authenticated user to GET a profile. This is needed for users to see each other's names/ratings.
      allow get: if isAuth();
      
      // LIST is disabled to prevent security rule contamination issues and protect user data.
      // This means admin pages that list all users won't work with this rule.
      allow list: if false;
      
      // A user can create their own profile.
      allow create: if isOwner(userId);
      
      // A user can update their own profile.
      allow update: if isOwner(userId);
      
      // No one can delete profiles.
      allow delete: if false;
    }

    match /sessionRequests/{requestId} {
      // For queries: allow any authenticated user to attempt a query.
      allow list: if isAuth();

      // For individual reads (and validating query results):
      // Allow if you are the student, the accepted tutor, or if the request is still open for tutors to see.
      allow get: if isAuth() && (
        resource.data.status == 'open' ||
        isOwner(resource.data.studentId) || 
        (resource.data.tutorId != null && isOwner(resource.data.tutorId))
      );
      
      // Create: An authenticated user can create a request for themselves.
      allow create: if isAuth() && isOwner(request.resource.data.studentId);
      
      // Update: Complex state machine for session updates. This is secure.
      // - A tutor can accept an open request.
      // - The student can cancel an open or accepted request.
      // - The student or tutor can mark an accepted session as completed.
      // - The student can rate the tutor after completion.
      // - The tutor can rate the student after completion.
      allow update: if isAuth() && (
        (resource.data.status == 'open' && request.resource.data.status == 'accepted' && request.resource.data.tutorId == request.auth.uid) ||
        (isOwner(resource.data.studentId) && (resource.data.status == 'open' || resource.data.status == 'accepted') && request.resource.data.status == 'cancelled') ||
        ((isOwner(resource.data.studentId) || isOwner(resource.data.tutorId)) && resource.data.status == 'accepted' && resource.data.status == 'completed') ||
        (isOwner(resource.data.studentId) && resource.data.status == 'completed' && resource.data.tutorRating == null && request.resource.data.tutorRating != null) ||
        (isOwner(resource.data.tutorId) && resource.data.status == 'completed' && resource.data.studentRating == null && request.resource.data.studentRating != null)
      );
      
      // Delete: Student can delete their own 'open' request.
      allow delete: if isAuth() && isOwner(resource.data.studentId) && resource.data.status == 'open';
    }

    match /transactions/{transactionId} {
      // Allow authenticated users to list their own transactions.
      // The client query MUST use `where('userId', '==', request.auth.uid)`.
      allow list: if isAuth();
      // Allow user to get their own transaction.
      allow get: if isAuth() && isOwner(resource.data.userId);

      // A user can only create their own transaction (system does this).
      allow create: if isAuth() && isOwner(request.resource.data.userId);

      // No updates or deletes allowed to preserve financial records.
      allow update, delete: if false;
    }

    match /notifications/{notificationId} {
      // Allow authenticated users to list their own notifications.
      // The client query MUST use `where('userId', '==', request.auth.uid)`.
      allow list: if isAuth();
      
      // Allow user to get their own notification.
      allow get: if isAuth() && isOwner(resource.data.userId);
      
      // Only the system should create notifications, but we'll scope it to the user for now.
      allow create: if isAuth() && isOwner(request.resource.data.userId);
      
      // Users can update their own notifications (e.g. to mark as read).
      allow update: if isAuth() && isOwner(resource.data.userId);
      
      // Deleting notifications is not allowed.
      allow delete: if false;
    }
  }
}
