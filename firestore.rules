rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Collection Rules ---

    match /userProfiles/{userId} {
      // Read: Any authenticated user can get a specific profile. List is not allowed.
      allow get: if isAuth();
      
      // Create: A user can create their own profile.
      allow create: if isOwner(userId);
      
      // Update: A user can update their own profile. Admin logic removed for query safety.
      allow update: if isOwner(userId);
      
      // Delete: No one can delete profiles.
      allow delete: if false;
    }

    match /sessionRequests/{requestId} {
      // This is the pattern for securing queries.
      // 1. A loose `list` rule allows the query to be attempted.
      // 2. A strict `get` rule is evaluated for every document the query *could* return.
      // The client-side code *must* include `where` clauses that align with the `get` rule.
      
      // Allow any authenticated user to try and list sessions.
      allow list: if isAuth();

      // Only allow reading a single session if you are the student, the tutor, or if it's open.
      allow get: if isAuth() && (
        isOwner(resource.data.studentId) || 
        (resource.data.tutorId != null && isOwner(resource.data.tutorId)) ||
        resource.data.status == 'open'
      );
      
      // Create: An authenticated user can create a request for themselves.
      allow create: if isAuth() && isOwner(request.resource.data.studentId);
      
      // Update: Simplified rules that do not rely on get() calls.
      allow update: if isAuth() && (
        (resource.data.status == 'open' && request.resource.data.status == 'accepted' && request.resource.data.tutorId == request.auth.uid) ||
        (isOwner(resource.data.studentId) && (resource.data.status == 'open' || resource.data.status == 'accepted') && request.resource.data.status == 'cancelled') ||
        ((isOwner(resource.data.studentId) || isOwner(resource.data.tutorId)) && resource.data.status == 'accepted' && resource.data.status == 'completed') ||
        (isOwner(resource.data.studentId) && resource.data.status == 'completed' && resource.data.tutorRating == null && request.resource.data.tutorRating != null) ||
        (isOwner(resource.data.tutorId) && resource.data.status == 'completed' && resource.data.studentRating == null && request.resource.data.studentRating != null)
      );
      
      // Delete: Student can delete their own 'open' request. Admin logic removed.
      allow delete: if isAuth() && isOwner(resource.data.studentId) && resource.data.status == 'open';
    }

    match /transactions/{transactionId} {
      // WARNING: This rule is permissive for reads. Security relies on the client-side query.
      allow read: if request.auth != null;

      // A user can only create their own transaction.
      allow create: if request.auth.uid == request.resource.data.userId;

      // No updates or deletes allowed.
      allow update, delete: if false;
    }

    match /notifications/{notificationId} {
      // WARNING: This rule is permissive for reads. Security relies on the client-side query.
      allow read: if request.auth != null;
      
      // Anyone authenticated can create a notification (e.g. system for a user).
      allow create: if request.auth != null; 
      
      // Users can update their own notifications (e.g. to mark as read).
      allow update: if request.auth.uid == resource.data.userId;
      
      // Deleting notifications is not allowed.
      allow delete: if false;
    }
  }
}
