rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      // User must be authenticated and their profile must not be disabled.
      return request.auth != null && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.disabled != true;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isStudent(userId) {
      return getUserData(userId).role == 'student';
    }

    function isTutor(userId) {
      return getUserData(userId).role == 'tutor';
    }
    
    function isAdmin(userId) {
       return request.auth != null && exists(/databases/$(database)/documents/userProfiles/$(userId)) && getUserData(userId).isAdmin == true;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /userProfiles/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      // Only owner or an admin can update a profile.
      allow update: if isOwner(userId) || isAdmin(request.auth.uid);
      allow delete: if false;
    }

    match /sessionRequests/{requestId} {
      allow get: if isSignedIn() && 
                    (isOwner(resource.data.studentId) || isOwner(resource.data.tutorId) || isAdmin(request.auth.uid));
      
      allow list: if isSignedIn();
      
      allow create: if isSignedIn() && isStudent(request.auth.uid) && request.resource.data.studentId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        // Tutor accepts a request
        (isTutor(request.auth.uid) && resource.data.status == 'open' && request.resource.data.status == 'accepted') ||
        // Student cancels an open or accepted request
        (isOwner(resource.data.studentId) && (resource.data.status == 'open' || resource.data.status == 'accepted') && request.resource.data.status == 'cancelled') ||
        // Either participant completes an accepted session
        ((isOwner(resource.data.studentId) || isOwner(resource.data.tutorId)) && resource.data.status == 'accepted' && request.resource.data.status == 'completed') ||
        // Student rates the tutor after completion
        (isOwner(resource.data.studentId) && resource.data.status == 'completed' && resource.data.tutorRating == null && request.resource.data.tutorRating != null) ||
        // Tutor rates the student after completion
        (isOwner(resource.data.tutorId) && resource.data.status == 'completed' && resource.data.studentRating == null && request.resource.data.studentRating != null) ||
        // Admin can update anything
        isAdmin(request.auth.uid)
      );
      
      allow delete: if (isSignedIn() && isOwner(resource.data.studentId) && resource.data.status == 'open') || isAdmin(request.auth.uid);
    }

    match /transactions/{transactionId} {
        allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin(request.auth.uid));
        allow list: if isSignedIn(); // Queries must filter by userId on the client for non-admins.
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update, delete: if false;
    }

    match /notifications/{notificationId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin(request.auth.uid));
      allow list: if isSignedIn(); // Queries must filter by userId on the client for non-admins.
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn(); // Should be locked down to backend functions/admins
      allow delete: if isAdmin(request.auth.uid);
    }
  }
}
