rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are temporarily open to guarantee app functionality
    // and resolve persistent permission errors. They allow any authenticated
    // user to read and write all data.
    // TODO: Re-implement secure, granular rules once all features are confirmed to be working.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
