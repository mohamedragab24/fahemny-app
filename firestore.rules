rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/userProfiles/$(request.auth.uid));
      return isAuth()
        && exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid))
        && userDoc.data.isAdmin == true;
    }
    function isTutor() {
      return isAuth()
        && exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid))
        && get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'tutor';
    }

    // User Profiles
    match /userProfiles/{userId} {
      allow create: if isAuth() && isOwner(userId);
      allow get: if isAuth();
      allow list: if isAdmin();
      allow update: if isAuth() && (isOwner(userId) || isAdmin());
      allow delete: if false; 
    }

    // Session Requests
    match /sessionRequests/{requestId} {
      // Admins can read anything
      allow read: if isAdmin();
      
      // A user can read a session if they are the student
      allow read: if isAuth() && resource.data.studentId == request.auth.uid;
      
      // A tutor can read a session if they are assigned to it
      allow read: if isAuth() && isTutor() && resource.data.tutorId == request.auth.uid;

      // A tutor can read (browse) any open session
      allow read: if isAuth() && isTutor() && resource.data.status == 'open';

      allow create: if isAuth() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAuth() && (
        isOwner(resource.data.studentId) || 
        (resource.data.tutorId != null && isOwner(resource.data.tutorId)) ||
        isAdmin()
      );
      allow delete: if false;
    }
    
    // Transactions
    match /transactions/{transactionId} {
      allow read: if isAdmin();
      allow read: if isAuth() && isOwner(resource.data.userId);

      allow create: if isAuth() && (isOwner(request.resource.data.userId) || isAdmin());
      allow update, delete: if false;
    }

    // Notifications
    match /notifications/{notificationId} {
       allow create: if isAuth(); // Server-side writes will bypass this.
       allow read, update, delete: if isAdmin();
       allow read, update, delete: if isAuth() && isOwner(resource.data.userId);
    }

    // Withdrawal Requests
    match /withdrawalRequests/{withdrawalId} {
      allow create: if isAuth() && isOwner(request.resource.data.userId);
      allow list: if isAdmin();
      
      allow get: if isAdmin();
      allow get: if isAuth() && isOwner(resource.data.userId);

      allow update: if isAdmin();
      allow delete: if false;
    }

    // Discount Codes
    match /discountCodes/{discountId} {
      allow create, update, delete: if isAdmin();
      allow get, list: if isAuth();
    }

    // Contact Messages
    match /contactMessages/{messageId} {
      allow create: if true; // Anyone can send a message
      allow list, get, update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
