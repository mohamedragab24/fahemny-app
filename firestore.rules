rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isStudent(userId) {
      return getUserData(userId).role == 'student';
    }

    function isTutor(userId) {
      return getUserData(userId).role == 'tutor';
    }
    
    function isAdmin(userId) {
      return isSignedIn() && getUserData(userId).isAdmin == true;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /userProfiles/{userId} {
      allow get: if true;
      allow list: if isSignedIn() && isAdmin(request.auth.uid);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin(request.auth.uid);
      allow delete: if false;
    }

    match /sessionRequests/{requestId} {
      allow get: if isSignedIn() && 
                    (isTutor(request.auth.uid) || isOwner(resource.data.studentId) || isOwner(resource.data.tutorId) || isAdmin(request.auth.uid));
      
      allow list: if isSignedIn() && (isTutor(request.auth.uid) || isAdmin(request.auth.uid));
      
      allow create: if isSignedIn() && isStudent(request.auth.uid) && request.resource.data.studentId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        (isTutor(request.auth.uid) && resource.data.status == 'open' && request.resource.data.status == 'accepted') ||
        (isOwner(resource.data.studentId) && (resource.data.status == 'open' || resource.data.status == 'accepted') && request.resource.data.status == 'cancelled') ||
        ((isOwner(resource.data.studentId) || isOwner(resource.data.tutorId)) && resource.data.status == 'accepted' && request.resource.data.status == 'completed') ||
        (isOwner(resource.data.studentId) && resource.data.status == 'completed' && resource.data.tutorRating == null) ||
        (isOwner(resource.data.tutorId) && resource.data.status == 'completed' && resource.data.studentRating == null)
      );
      
      allow delete: if isSignedIn() && isOwner(resource.data.studentId) && resource.data.status == 'open';
    }

    match /transactions/{transactionId} {
        allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin(request.auth.uid));
        allow list: if isSignedIn(); // Client must filter by userId
        allow create: if isSignedIn() && isOwner(request.resource.data.userId);
        allow update, delete: if false;
    }
  }
}
