rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isAuth() {
      return request.auth != null;
    }

    // Checks if the user is authenticated and their profile exists and is not disabled.
    // IMPORTANT: This function performs a 'get' and CANNOT be used in 'list' rules.
    function isSignedInAndActive() {
      return isAuth() &&
             exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.disabled != true;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/userProfiles/$(userId)).data;
    }

    function isStudent(userId) {
      return exists(/databases/$(database)/documents/userProfiles/$(userId)) && getUserData(userId).role == 'student';
    }

    function isTutor(userId) {
      return exists(/databases/$(database)/documents/userProfiles/$(userId)) && getUserData(userId).role == 'tutor';
    }
    
    function isAdmin(userId) {
       return isAuth() && 
              exists(/databases/$(database)/documents/userProfiles/$(userId)) && 
              getUserData(userId).isAdmin == true;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /userProfiles/{userId} {
      // Any authenticated user can read any profile. 
      // This is needed for features like viewing tutor/student names.
      allow read: if isAuth();
      allow create: if isOwner(userId);
      // Only owner or an admin can update a profile, and they must be active.
      allow update: if (isOwner(userId) || isAdmin(request.auth.uid)) && isSignedInAndActive();
      allow delete: if false;
    }

    match /sessionRequests/{requestId} {
      allow get: if isSignedInAndActive() && 
                    (isOwner(resource.data.studentId) || isOwner(resource.data.tutorId) || isAdmin(request.auth.uid));
      
      // WARNING: This rule is intentionally broad to allow tutors to browse open requests.
      // The client-side query MUST securely filter the requests.
      allow list: if isAuth();
      
      allow create: if isSignedInAndActive() && isStudent(request.auth.uid) && request.resource.data.studentId == request.auth.uid;
      
      allow update: if isSignedInAndActive() && (
        // Tutor accepts a request
        (isTutor(request.auth.uid) && resource.data.status == 'open' && request.resource.data.status == 'accepted') ||
        // Student cancels an open or accepted request
        (isOwner(resource.data.studentId) && (resource.data.status == 'open' || resource.data.status == 'accepted') && request.resource.data.status == 'cancelled') ||
        // Either participant completes an accepted session
        ((isOwner(resource.data.studentId) || isOwner(resource.data.tutorId)) && resource.data.status == 'accepted' && request.resource.data.status == 'completed') ||
        // Student rates the tutor after completion
        (isOwner(resource.data.studentId) && resource.data.status == 'completed' && resource.data.tutorRating == null && request.resource.data.tutorRating != null) ||
        // Tutor rates the student after completion
        (isOwner(resource.data.tutorId) && resource.data.status == 'completed' && resource.data.studentRating == null && request.resource.data.studentRating != null) ||
        // Admin can update anything
        isAdmin(request.auth.uid)
      );
      
      allow delete: if (isSignedInAndActive() && isOwner(resource.data.studentId) && resource.data.status == 'open') || isAdmin(request.auth.uid);
    }

    match /transactions/{transactionId} {
        // GET: A user can get their own transaction.
        allow get: if isOwner(resource.data.userId);
        
        // LIST: Any authenticated user can attempt a list. Firestore then checks
        // the 'get' rule against the query's potential results. The client query
        // must contain a `where('userId', '==', auth.uid)` clause.
        allow list: if isAuth();
        
        // Writes are separate and can use more complex helpers.
        allow create: if isSignedInAndActive() && isOwner(request.resource.data.userId);
        allow update: if false;
        allow delete: if isAdmin(request.auth.uid);
    }

    match /notifications/{notificationId} {
      // GET: A user can get or update their own notification.
      allow get, update: if isOwner(resource.data.userId);
      
      // LIST: Any authenticated user can attempt to list notifications.
      // Firestore will enforce the 'get' rule on the results.
      allow list: if isAuth();
      
      // CREATE: Any authenticated user can create a notification (e.g. tutor for student).
      allow create: if isAuth(); 
      
      // DELETE: Admin can delete notifications.
      allow delete: if isAdmin(request.auth.uid);
    }
  }
}
